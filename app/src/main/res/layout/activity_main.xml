<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:lsv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <com.ray.widget.lab.LabelSwitchView
        android:id="@+id/label_view"
        android:background="@drawable/bg_round_rect_blue"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:padding="5dp"
        lsv:labels="@array/labels"
        lsv:normalColor="#16a2d5"
        lsv:selectedColor="#ffffff"
        lsv:selectedBackground="@drawable/round_rect_blue_fill"
        lsv:labelTextSize="16sp"
        lsv:dragOutDist="5dp"
        />

</RelativeLayout>
